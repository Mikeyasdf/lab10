<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h3> Author Quotes </h3>
		<a class='btn btn-primary' href='/home'>Home</a>
	</div>
	<h3>Are you sure?</h3>
	<form action='/author/<%=author.authorId%>/delete' method='GET'>
	    <div class='form-group row'>
	        Are you sure you want to delete the author <%=author.firstName%> <%=author.lastName %>?
        </div>
		<div class='form-group row'>
			<div class='col-sm-4'>
			    <a class='btn btn-danger' href='/home'>No, Cancel</a>
			</div>
			<div class='col-sm-4'>
				<button class='btn btn-primary'>Yes, Delete</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
</div>